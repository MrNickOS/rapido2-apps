<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".control.Estadisticas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estadisticas"
        android:id="@+id/textView11"
        android:layout_marginTop="40dp"
        android:textSize="55sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pregunta 1"
        android:id="@+id/Preg_1"
        android:textSize="20sp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="95dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pregunta 2"
        android:id="@+id/Preg_2"
        android:textSize="20sp"
        android:layout_below="@+id/Preg_1"
        android:layout_alignStart="@+id/Preg_1"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pregunta 3"
        android:id="@+id/Preg_3"
        android:textSize="20sp"
        android:layout_below="@+id/Preg_2"
        android:layout_alignStart="@+id/Preg_2"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pregunta 4"
        android:id="@+id/Preg_4"
        android:textSize="20sp"
        android:layout_below="@+id/Preg_3"
        android:layout_alignStart="@+id/Preg_3"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/aciertos_1"
        android:layout_above="@+id/Preg_2"
        android:layout_toEndOf="@+id/Preg_1"
        android:layout_marginStart="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/errores_1"
        android:layout_marginStart="75dp"
        android:layout_alignTop="@+id/aciertos_1"
        android:layout_toEndOf="@+id/aciertos_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/aciertos_2"
        android:layout_above="@+id/Preg_3"
        android:layout_alignStart="@+id/aciertos_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/errores_2"
        android:layout_above="@+id/Preg_3"
        android:layout_alignStart="@+id/errores_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/aciertos_3"
        android:layout_above="@+id/Preg_4"
        android:layout_alignStart="@+id/aciertos_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/errores_3"
        android:layout_above="@+id/Preg_4"
        android:layout_alignStart="@+id/errores_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/aciertos_4"
        android:layout_alignBottom="@+id/Preg_4"
        android:layout_alignStart="@+id/aciertos_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/errores_4"
        android:layout_alignTop="@+id/aciertos_4"
        android:layout_alignStart="@+id/errores_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aciertos"
        android:id="@+id/aciertos"
        android:layout_above="@+id/aciertos_1"
        android:layout_alignStart="@+id/aciertos_1"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="-30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Errores"
        android:id="@+id/errores"
        android:layout_marginLeft="-20dp"
        android:layout_alignTop="@+id/aciertos"
        android:layout_alignStart="@+id/errores_1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fin del juego"
        android:id="@+id/fin_juego"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/Preg_4"
        android:layout_marginBottom="20dp"
        android:onClick="finJuego"/>

</RelativeLayout>
