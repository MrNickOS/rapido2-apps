<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mrnickapps.preguntasyrespuestas.control.Resultados">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tus resultados"
        android:id="@+id/textView5"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="45sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Numero correctas:"
        android:id="@+id/NumCorrectas"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView5"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Numero incorrectas:"
        android:id="@+id/NumIncorrectas"
        android:layout_below="@+id/NumCorrectas"
        android:layout_alignStart="@+id/NumCorrectas"
        android:layout_marginTop="50dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/ncorr"
        android:layout_alignTop="@+id/NumCorrectas"
        android:layout_alignEnd="@+id/textView5"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/nIncorr"
        android:layout_alignBottom="@+id/NumIncorrectas"
        android:layout_alignEnd="@+id/ncorr"
        android:textSize="20sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/results"
        android:layout_below="@+id/NumIncorrectas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:onClick="estadisticas"/>
</RelativeLayout>
